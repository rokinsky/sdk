{
  "extends": "@rokinsky/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "jsx": "react",
    "sourceMap": true,
    "declaration": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "example"
  ]
}
